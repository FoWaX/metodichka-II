#include <iostream>
using namespace std;

float F(float x)
{
    if ((x * x + 2 * x + 1) < 2)
    {
        return x * x;
    }
    else if ((x * x + 2 * x + 1) < 3 && (x * x + 2 * x + 1) >= 2)
    {
        return (1. / (x * x - 1));
    }
    else if ((x * x + 2 * x + 1) >= 3)
    {
        return 0;
    }
}

void F(float x, float& y)
{
    if ((x * x + 2 * x + 1) < 2)
    {
        y = x * x;
    }
    else if ((x * x + 2 * x + 1) < 3 && (x * x + 2 * x + 1) >= 2)
    {
        y = (1. / (x * x - 1));
    }
    else if ((x * x + 2 * x + 1) >= 3)
    {
        y = 0;
    }
}

int main()
{
    float a, b, h,y;
    y = 0;
    cin >> a >> b >> h;
    for (float i = a; i <= b; i += h)
    {
        cout << "x= " << i << "\t" << "y= " << F(i) << endl;
    }
    cout << endl;
    for (float i = a; i <= b; i += h)
    {
        F(i, y);
        cout << "x= " << i << "\t" << "y= " << y << endl;
    }
}
